@model List<Game>
@{
    ViewBag.Title = "Games";
}

<h1>Video Game List!</h1>

<a asp-controller="Game" asp-action="Add">Add New Games</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Developer</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach( var game in Model)
        {
            <tr>
                <td>@game.Name</td>
                <td>@game.Year</td>
                <td>@game.Developer</td>
                <td>@game.Genre</td>
            </tr>
        }
    </tbody>
</table>
